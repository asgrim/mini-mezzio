{
    "name": "asgrim/mini-mezzio",
    "description": "Minimal Application Factory for Mezzio",
    "type": "library",
    "require": {
        "php": "7.4.*|8.0.*",
        "laminas/laminas-diactoros": "^2.5",
        "laminas/laminas-httphandlerrunner": "^1.3",
        "laminas/laminas-stratigility": "^3.3",
        "mezzio/mezzio": "^3.3",
        "mezzio/mezzio-router": "^3.3",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^8.2",
        "laminas/laminas-servicemanager": "^3.6",
        "mezzio/mezzio-fastroute": "^3.1",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.15.1",
        "vimeo/psalm": "^4.4"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "James Titcumb",
            "email": "james@asgrim.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Asgrim\\MiniMezzio\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AsgrimTest\\MiniMezzio\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
